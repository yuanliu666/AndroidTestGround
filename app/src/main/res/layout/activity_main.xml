<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_hello_world_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world_activity"/>

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_image_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image_activity"/>

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_button_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_activity"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_recyclerview_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recyclerview_activity"/>
</LinearLayout>